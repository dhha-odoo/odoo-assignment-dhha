<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- adding graph in actions -->
    <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="name">Batch Transfers</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_mode">tree,kanban,form,graph,gantt</field>
    </record>

    <record id="inventory_inherit" model="ir.actions.act_window">
        <field name="name">Inventory Inherit</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="inventory_view_form" model="ir.ui.view">
        <field name="name">inventory.view.form</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="mode">extension</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='scheduled_date']" position="after">
                <group col="1">
                    <group col="2">
                        <field name="dock_id" colspan="2"></field>
                        <field name="vehicle_id" placeholder="Vehicle Name" colspan="2"></field>
                        <field name="vehicle_category_id" placeholder="Vehicle Category"></field>
                    </group>
                    <group >
                        <div invisible="not vehicle_category_id" class="mt-100">
                            <div class="d-flex align-items-center">
                                <label for="total_weight" class="col-form-label me-3">Weight:</label>
                                <div class="flex-grow-1 d-flex align-items-center">
                                    <field name="total_weight" readonly="1"/>
                                    <span class="mx-2 ">kg</span>
                                </div>
                                <div class="flex-grow-1">
                                    <field name="weight_percentage" widget="progressbar"/>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mt-2">
                                <label for="total_volume" class="col-form-label me-3">Volume:</label>
                                <div class="flex-grow-1 d-flex align-items-center">
                                    <field name="total_volume" readonly="1"/>
                                    <span class="mx-2">mÂ³</span>
                                </div>
                                <div class="flex-grow-1">
                                    <field name="volume_percentage" widget="progressbar" />
                                </div>
                            </div>
                        </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>


    <!-- new graph view is create  -->
    <record id="view_stock_picking_batch_graph" model="ir.ui.view">
        <field name="name">stock.picking.batch.graph</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph type="bar" sample="1">
                <field name="scheduled_date" interval="day"/>
                <field name="vehicle_category_id"/>
                <field name="weight_percentage" type="measure" />
                <field name="volume_percentage" type="measure" />
                <field name="total_weight" invisible="1"/>
                <field name="total_volume" invisible="1"/>
            </graph>
        </field>
    </record>

    <record id="view_stock_picking_batch_gantt" model="ir.ui.view">
        <field name="name">stock.picking.batch.gantt</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <gantt date_start="scheduled_date" date_stop="date_deadline" default_group_by='dock_id,vehicle_id' color="id" decoration-info=" state == 'draft'" string="Transfer">
                <field name="name" />
                <field name="vehicle_category_id" />
                <field name="state" />
                <templates>
                    <div t-name="gantt-popover" class="container-fluid">
                        <div class="row g-0">
                            <div class="col">
                                <ul class="ps-1 mb-0 list-unstyled">
                                    <li>
                                        <strong>Name : </strong>
                                        <t t-esc="name"/>
                                    </li>
                                    <li>
                                        <strong>Vehicle Category :</strong>
                                        <t t-esc="vehicle_category_id"/>
                                    </li>
                                    <li>
                                        <strong>State : </strong>
                                        <t t-esc="state"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>

</odoo>
